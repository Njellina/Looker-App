<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CompanyViewJob">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:layout_weight="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#E2E2E2">

        <EditText
            android:id="@+id/textEmail"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Insert Applicator Email"
            android:textColor="@color/black">
        </EditText>

        <ImageButton
            android:id="@+id/buttonAccept"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/accept1"
            />

        <ImageButton
            android:id="@+id/buttonDecline"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/decline"
            />

        <ImageButton
            android:id="@+id/buttonCV"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/resume1"
            />

    </LinearLayout>

</LinearLayout>

