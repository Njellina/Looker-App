<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D85C5"
    tools:context=".ApplicantEditBio">

    <TextView
        android:id="@+id/jobexp"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="401dp"
        android:text="Job Experience:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="293dp"
        android:layout_marginBottom="547dp"
        android:text="Email:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="505dp"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="293dp"
        android:layout_marginBottom="474dp"
        android:text="Bio:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textBio"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="433dp"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/textJobExp"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="360dp"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/buttonViewBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="309dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="250dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/viewbio" />

    <ImageButton
        android:id="@+id/buttonUpdateBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="379dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="180dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/updatebio" />


</FrameLayout>