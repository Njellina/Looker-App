<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    tools:context=".CompanyViewFragment">

    <ImageButton
        android:id="@+id/buttonViewJob"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="442dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/viewjobbox"
        />

    <ImageButton
        android:id="@+id/buttonViewApplicant"
        android:layout_width="353dp"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="285dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/viewapplicatorbox"
        />

    <ImageButton
        android:id="@+id/buttonClosedJob"
        android:layout_width="353dp"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="140dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/closedjob"
        />

    <ImageButton
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="295dp"
        android:layout_marginTop="479dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="45dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/newjob"
        />

</RelativeLayout>