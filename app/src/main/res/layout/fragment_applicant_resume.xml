<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    tools:context=".ApplicantResumeFragment">

    <ImageButton
        android:id="@+id/buttonUploadCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="480dp"
        android:background="#00FFFFFF"
        android:src="@drawable/uploadcv"
        />

    <ImageButton
        android:id="@+id/buttonViewCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="402dp"
        android:background="#00FFFFFF"
        android:src="@drawable/viewcv"
        />

    <ImageButton
        android:id="@+id/buttonDeleteCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="320dp"
        android:background="#00FFFFFF"
        android:src="@drawable/deletecv"
        />

</RelativeLayout>